@using myfinance_web_dotnet.Domain
@{
    ViewData["Title"] = "Plano de Contas";
}
<div class="container">
    <h1>Plano de Contas</h1>
    <br />
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="PlanoConta" asp-action="Cadastro">Criar item de
        Plano de Conta</a>
    <br /><br />

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Tipo</th>
                <th>#</th>
                <th>#</th>
            </tr>
        </thead>

        @{
            foreach (var item in (List<PlanoConta>)ViewBag.PlanoContaList)
            {
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Tipo</td>
                        <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button>
                        </td>
                        <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button>
                        </td>
                    </tr>
                </tbody>
            }
        }
    </table>

    <script>
        function Editar(id) {
            window.location.href = "../PlanoConta/Cadastro/" + id;
        }
        function Excluir(id) {
            window.location.href = "../PlanoConta/Excluir/" + id;
        }
    </script>
</div>
